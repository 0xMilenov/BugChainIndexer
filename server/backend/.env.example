DATABASE_URL=postgresql://user:password@localhost:5432/bugchain_indexer
EVMBENCH_API_URL=http://127.0.0.1:1337
PORT=8000
DISABLE_HTTPS=true
ALCHEMY_API_KEY=

# GitHub OAuth - required for "Log in with GitHub"
# 1. Create OAuth app: https://github.com/settings/applications/new
# 2. Set Authorization callback URL: {FRONTEND_URL}/auth/github/callback
# 3. Copy Client ID and Client Secret here
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
AUTH_JWT_SECRET=change-me-to-a-random-32-char-string
# Optional: separate key for encrypting stored GitHub tokens (defaults to AUTH_JWT_SECRET)
# GITHUB_TOKEN_ENCRYPTION_KEY=
AUTH_JWT_TTL_DAYS=30
FRONTEND_URL=http://localhost:3000
