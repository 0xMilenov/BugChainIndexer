[Unit]
Description=BugChainIndexer Backend API
After=network.target evmbench.service

[Service]
ExecStart=/usr/bin/node index.js
WorkingDirectory=/home/claude/BugChainIndexer/server/backend
Restart=always
RestartSec=10
User=root
Environment=NODE_ENV=production
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=node-app

[Install]
WantedBy=multi-user.target
